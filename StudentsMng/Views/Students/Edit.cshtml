@model StudentViewModel

@{
    var isEditMode = Model.Id != 0;
    var action = isEditMode ? "Edit" : "Create";
    ViewData["Title"] = action;
}

<form asp-controller="Students" asp-action="@action">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" placeholder="Enter last name..." />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter first name..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic" class="control-label"></label>
        <input asp-for="Patronymic" class="form-control" placeholder="Enter patronymic..." />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GroupId" class="control-label"></label>
        <input class="form-control" type="text" name="GroupId" placeholder="Enter patronymic..." value="1" />
    </div>

    <div class="form-group">
        @if (action == "Edit")
        {
            <button class="btn btn-success">Edit</button>
            <button class="btn btn-danger" asp-action="Delete" asp-route-Id="@Model.Id">Delete</button>
        }
        else
        {
            <button class="btn btn-success">Create</button>
        }

        <button class="btn btn-info" asp-action="Index">Back</button>
    </div>
</form>